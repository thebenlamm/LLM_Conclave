{
  "name": "llm_conclave",
  "version": "1.0.0",
  "description": "Multi-agent LLM collaboration tool for solving tasks through structured conversation",
  "main": "index.js",
  "bin": {
    "llm-conclave": "./dist/index.js"
  },
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "ts-node index.ts",
    "build": "tsc && chmod +x dist/index.js && chmod +x dist/src/mcp/server.js",
    "mcp-server": "node dist/src/mcp/server.js",
    "mcp-dev": "ts-node src/mcp/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "init": "ts-node index.ts --init",
    "help": "ts-node index.ts --help"
  },
  "keywords": [
    "llm",
    "ai",
    "multi-agent",
    "chatgpt",
    "claude",
    "grok",
    "collaboration",
    "consensus"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "@google/genai": "^1.30.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "better-sqlite3": "^12.5.0",
    "chalk": "^4.1.2",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "glob": "^13.0.0",
    "inquirer": "^9.3.8",
    "openai": "^6.9.1",
    "ora": "^5.4.1",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
